#include <iostream>
#include <filesystem>
#include <queue>
#include <stack>
#include <vector>

namespace fs = std::filesystem;
using namespace std;

struct Operation {
    fs::path original;
    fs::path vault;
};

stack<Operation> undoStack;
stack<Operation> redoStack;

vector<fs::path> scanDirectory(const fs::path& root) {
    queue<fs::path> q;
    vector<fs::path> files;

    q.push(root);

    while (!q.empty()) {
        fs::path cur = q.front();
        q.pop();

        for (auto& entry : fs::directory_iterator(cur)) {
            if (entry.is_directory()) {
                q.push(entry.path());
            } else if (entry.is_regular_file()) {
                files.push_back(entry.path());
            }
        }
    }
    return files;
}
void moveToVault(const fs::path& file, const fs::path& vaultDir) {
    fs::create_directories(vaultDir);
    fs::path dest = vaultDir / file.filename();

    fs::rename(file, dest);

    undoStack.push({file, dest});
    while (!redoStack.empty()) redoStack.pop();

    cout << "Optimized (moved to vault): " << file.filename() << endl;
}
void undo() {
    if (undoStack.empty()) {
        cout << "Nothing to recover\n";
        return;
    }
    Operation op = undoStack.top();
    undoStack.pop();

    fs::rename(op.vault, op.original);
    redoStack.push(op);

    cout << "Recovered: " << op.original.filename() << endl;
}
void redo() {
    if (redoStack.empty()) {
        cout << "Nothing to redo\n";
        return;
    }
    Operation op = redoStack.top();
    redoStack.pop();

    fs::rename(op.original, op.vault);
    undoStack.push(op);

    cout << "Optimized again: " << op.original.filename() << endl;
}
int main() {
    string path;
    cout << "Enter directory path to scan: ";
    getline(cin, path);

    fs::path root(path);
    fs::path vault = "vault";

    if (!fs::exists(root)) {
        cout << "Invalid path\n";
        return 0;
    }

    vector<fs::path> files = scanDirectory(root);

    if (files.empty()) {
        cout << "No files found\n";
        return 0;
    }

    cout << "\nFiles found:\n";
    for (size_t i = 0; i < files.size(); i++) {
        cout << i + 1 << ". " << files[i].filename() << endl;
    }

    int choice;
    cout << "\nEnter file number to optimize (delete): ";
    cin >> choice;

    if (choice < 1 || choice > files.size()) {
        cout << "Invalid choice\n";
        return 0;
    }

    moveToVault(files[choice - 1], vault);

    char cmd;
    do {
        cout << "\nMenu:\n";
        cout << "u - Recover file\n";
        cout << "r - Delete again\n";
        cout << "q - Quit\n";
        cout << "Enter choice: ";
        cin >> cmd;

        if (cmd == 'u') undo();
        else if (cmd == 'r') redo();

    } while (cmd != 'q');

    cout << "Program ended\n";
    return 0;
} 
